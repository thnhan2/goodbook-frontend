<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="output.css">
</head>
<body>
  <%- include('headers') -%>
  <div class="mx-10">
    <h1 class="font-bold text-lg mt-2">New Releases</h1>
    <div class="flex flex-col sm:flex-row">
      <ul class="m-6 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        <% books.forEach((book) => { %>
          <li class="bg-white rounded-lg shadow-lg p-4">
            <span class="flex flex-row gap-2">
              <img src="<%= book.imageUrl %>" alt="Book Cover" width="120" height="180" class="object-cover mb-4">
              <span>
                <h2 class="text-xl font-bold mb-2"><%= book.title %></h2>
                <p><strong>by</strong> <%= book.authors[0].name %></p>
                <p><strong>‚≠ê</strong> <%= book.averageRating %>/5</p>
              </span>
            </span>
            <a href="<%= book.purchaseUrl[0].url %>" class="block mt-4 text-center bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Buy Now</a>
          </li>
        <% }) %>
      </ul>
      <div class="mt-6 sm:mt-2">
        <p class="font-bold text-lg">All genres:</p>
        <!-- Your genres content here -->
      </div>
    </div>
  </div>
</body>
</html>
